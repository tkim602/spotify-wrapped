<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="730dp"
        android:layout_height="1064dp"
        android:scaleY="1.37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/blue_patterns_foreground" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="334dp"
        android:layout_height="593dp"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/generateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gen_text"
                android:textAlignment="center"
                android:textColor="#014893"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_generate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="25dp"
                android:entries="@array/times" />

            <Button
                android:id="@+id/button_go"
                android:layout_width="70dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginVertical="100dp"
                android:backgroundTint="#4959EA"
                android:text="Go"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:rippleColor="#00F8FF" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:alpha="0.25"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/cancel_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#00FFFFFF"
        android:translationX="5dp"
        android:translationY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/segment1"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:scaleX="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_progress_bg"
        android:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/segment4"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="@drawable/custom_progress_bg"
        android:scaleX="1.5"
        app:layout_constraintStart_toEndOf="@id/segment1"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/segment5"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:alpha="0.5"
        android:scaleX="1.5"
        app:layout_constraintStart_toEndOf="@id/segment4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_progress_bg"
        />
    <ImageView
        android:id="@+id/segment6"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:alpha="0.5"
        android:scaleX="1.5"
        app:layout_constraintStart_toEndOf="@id/segment5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_progress_bg"
        />



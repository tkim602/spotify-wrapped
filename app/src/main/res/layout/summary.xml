            <TextView
                android:id="@+id/topartist_update3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="topartist_update3"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/topartist_update4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/topartist3"
                app:layout_constraintTop_toBottomOf="@+id/topartist_update2" />

            <TextView
                android:id="@+id/topartist_update4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="topartist_update4"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/topartist_update5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/topartist5"
                app:layout_constraintTop_toBottomOf="@+id/topartist_update3" />

            <TextView
                android:id="@+id/topartist_update5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="topartist_update5"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/topartist5"
                app:layout_constraintTop_toBottomOf="@+id/topartist_update4" />

            <TextView
                android:id="@+id/topartist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="2"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/topartist_update2"
                app:layout_constraintEnd_toStartOf="@+id/topartist_update2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/topartist_update2" />

            <TextView
                android:id="@+id/topartist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="3"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/topartist_update3"
                app:layout_constraintEnd_toStartOf="@+id/topartist_update3"

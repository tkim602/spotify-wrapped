            <TextView
                android:id="@+id/topartist4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="4"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/topartist_update4"
                app:layout_constraintEnd_toStartOf="@+id/topartist_update4"
